<% title "Log in" %>

<p>Don't have an account? <%= mail_to "j.stender@st.hanze.nl", "Request one" %></p>

<%= form_tag sessions_path, :class => 'form-stacked' do %>
  <p>
    <%= label_tag :login, "Username or Email Address" %>
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Log in", :class => 'btn primary' %></p>
<% end %>
