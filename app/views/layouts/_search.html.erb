<%= form_tag stations_path, :method => :get do %>
  <div class="input-prepend" style=" float: left; padding-right: 10px;">
      <span class="add-on">Search</span>
      <% 	if params[:search]
      			placeholder = params[:search]
      		else
      			placeholder = 'Search for a city or country'
	    		end %>
      <%= text_field_tag :search, params[:search], :placeholder => placeholder, :id => 'prependedInput' %>
  </div>
   
    <%= submit_tag "Search", :name => nil, :class => 'btn primary' %>
<% end %>