<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
  <%= render "layouts/menu" %>
    <div class="inner">
	    <div class="container">
		      <% flash.each do |name, msg| %>
		        <%= content_tag :div, msg, :class => "alert-message error flash_#{name}", :id => "error"%>
		      <% end %>
		      <%= content_tag :h1, yield(:title) if show_title? %>
		      <%= yield %>
	    </div>
    </div>
  </body>
  <%= yield :scripts %>
</html>
